    <script>
        // Menu mobile
        document.getElementById('menuToggle').addEventListener('click', function() {
            document.getElementById('navMenu').classList.toggle('show');
        });

        // Gestion des scripts
        const addScriptBtn = document.getElementById('addScriptBtn');
        const addScriptForm = document.getElementById('addScriptForm');
        const scriptForm = document.getElementById('scriptForm');
        const cancelBtn = document.getElementById('cancelBtn');
        const scriptsGrid = document.getElementById('scriptsGrid');

        // Liste des scripts (vide au départ)
        let scripts = [];

        // Afficher/Masquer le formulaire
        addScriptBtn.addEventListener('click', function() {
            addScriptForm.classList.toggle('active');
        });

        cancelBtn.addEventListener('click', function() {
            addScriptForm.classList.remove('active');
            scriptForm.reset();
        });

        // Gestion de la soumission du formulaire
        scriptForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const newScript = {
                id: Date.now(),
                title: document.getElementById('scriptTitle').value,
                author: document.getElementById('scriptAuthor').value,
                category: document.getElementById('scriptCategory').value,
                description: document.getElementById('scriptDescription').value,
                features: document.getElementById('scriptFeatures').value.split(',').map(f => f.trim()),
                date: new Date().toLocaleDateString('fr-FR')
            };
            
            // Ajouter le nouveau script
            scripts.unshift(newScript);
            displayScripts();
            
            // Réinitialiser le formulaire
            scriptForm.reset();
            addScriptForm.classList.remove('active');
            
            // Message de confirmation
            alert('Script publié avec succès!');
        });

        // Fonction pour afficher les scripts
        function displayScripts() {
            scriptsGrid.innerHTML = '';
            
            if (scripts.length === 0) {
                scriptsGrid.innerHTML = `
                    <div style="grid-column: 1 / -1; text-align: center; padding: 3rem; color: var(--light-gray);">
                        <i class="fas fa-code" style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.5;"></i>
                        <h3>Aucun script disponible</h3>
                        <p>Soyez le premier à ajouter un script public !</p>
                    </div>
                `;
                return;
            }
            
            scripts.forEach(script => {
                const scriptCard = document.createElement('div');
                scriptCard.className = 'script-card';
                
                scriptCard.innerHTML = `
                    <div class="script-header">
                        <span class="script-category">${script.category}</span>
                        <h3 class="script-title">${script.title}</h3>
                        <div class="script-author">Par: ${script.author}</div>
                        <div style="color: var(--light-gray); font-size: 0.8rem; margin-bottom: 0.5rem;">
                            Publié le: ${script.date}
                        </div>
                        <p class="script-description">${script.description}</p>
                    </div>
                    <div class="script-body">
                        <ul class="script-features">
                            ${script.features.map(feature => `<li><i class="fas fa-check"></i> ${feature}</li>`).join('')}
                        </ul>
                        <div class="script-footer">
                            <button class="btn" onclick="downloadScript('${script.title}')">
                                <i class="fas fa-download"></i> Télécharger
                            </button>
                        </div>
                    </div>
                `;
                
                scriptsGrid.appendChild(scriptCard);
            });
        }

        // Fonction de téléchargement
        function downloadScript(scriptName) {
            alert(`Téléchargement: ${scriptName}`);
        }

        // Afficher les scripts au chargement
        displayScripts();

        // Animation header au scroll
        window.addEventListener('scroll', function() {
            const header = document.querySelector('header');
            if (window.scrollY > 100) {
                header.style.backgroundColor = 'rgba(26, 26, 46, 0.95)';
            } else {
                header.style.backgroundColor = 'var(--primary-color)';
            }
        });
    </script>
</body>
